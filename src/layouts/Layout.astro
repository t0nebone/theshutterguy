---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Custom shutters, blinds, and shades in St. Petersburg, FL. 35+ years experience. Free consultations. Military & First Responder discounts." } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="keywords" content="plantation shutters, custom blinds, window shades, St Petersburg FL, window treatments, The Shutter Guy" />
    <link rel="icon" type="image/png" href="/images/logo.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Playfair+Display:wght@600;700&display=swap" rel="stylesheet">
    <title>{title} | The Shutter Guy St. Pete</title>
  </head>
  <body class="font-sans text-gray-800 antialiased">
    <!-- Header -->
    <header class="bg-white shadow-sm sticky top-0 z-50">
      <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-20">
          <!-- Logo -->
          <a href="/" class="flex items-center space-x-3">
            <img src="/images/logo.png" alt="The Shutter Guy" class="h-14 w-auto" />
          </a>
          
          <!-- Desktop Nav -->
          <div class="hidden md:flex items-center space-x-8">
            <a href="/" class="text-gray-600 hover:text-primary-600 font-medium transition">Home</a>
            <a href="/services" class="text-gray-600 hover:text-primary-600 font-medium transition">Services</a>
            <a href="/gallery" class="text-gray-600 hover:text-primary-600 font-medium transition">Gallery</a>
            <a href="/about" class="text-gray-600 hover:text-primary-600 font-medium transition">About</a>
            <a href="/contact" class="bg-primary-600 text-white px-6 py-2.5 rounded-lg font-semibold hover:bg-primary-700 transition">
              Free Consultation
            </a>
          </div>

          <!-- Mobile menu button -->
          <button id="mobile-menu-btn" class="md:hidden p-2 rounded-lg text-gray-600 hover:bg-gray-100">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
            </svg>
          </button>
        </div>

        <!-- Mobile Nav -->
        <div id="mobile-menu" class="hidden md:hidden pb-4">
          <div class="flex flex-col space-y-3">
            <a href="/" class="text-gray-600 hover:text-primary-600 font-medium py-2">Home</a>
            <a href="/services" class="text-gray-600 hover:text-primary-600 font-medium py-2">Services</a>
            <a href="/gallery" class="text-gray-600 hover:text-primary-600 font-medium py-2">Gallery</a>
            <a href="/about" class="text-gray-600 hover:text-primary-600 font-medium py-2">About</a>
            <a href="/contact" class="bg-primary-600 text-white px-6 py-3 rounded-lg font-semibold text-center hover:bg-primary-700 transition">
              Free Consultation
            </a>
          </div>
        </div>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <!-- Logo & About -->
          <div class="col-span-1 md:col-span-2">
            <img src="/images/logo.png" alt="The Shutter Guy" class="h-12 w-auto mb-4 brightness-0 invert" />
            <p class="text-gray-400 mb-4 max-w-md">
              Custom shutters, blinds, and shades for homes and businesses in St. Petersburg, FL. 
              35+ years of experience. Locally manufactured products with a 25-year warranty.
            </p>
            <div class="flex space-x-4">
              <a href="https://facebook.com/theshutterguystpete" target="_blank" class="text-gray-400 hover:text-white transition">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M18.77,7.46H14.5v-1.9c0-.9.6-1.1,1-1.1h3V.5h-4.33C10.24.5,9.5,3.44,9.5,5.32v2.15h-3v4h3v12h5v-12h3.85l.42-4Z"/></svg>
              </a>
              <a href="https://instagram.com/theshutterguystpete" target="_blank" class="text-gray-400 hover:text-white transition">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12,2.16c3.2,0,3.58,0,4.85.07,3.25.15,4.77,1.69,4.92,4.92.06,1.27.07,1.65.07,4.85s0,3.58-.07,4.85c-.15,3.23-1.66,4.77-4.92,4.92-1.27.06-1.65.07-4.85.07s-3.58,0-4.85-.07c-3.26-.15-4.77-1.7-4.92-4.92-.06-1.27-.07-1.65-.07-4.85s0-3.58.07-4.85C2.38,3.92,3.9,2.38,7.15,2.23,8.42,2.18,8.8,2.16,12,2.16ZM12,0C8.74,0,8.33,0,7.05.07c-4.27.2-6.78,2.71-7,7C0,8.33,0,8.74,0,12s0,3.67.07,4.95c.2,4.27,2.71,6.78,7,7C8.33,24,8.74,24,12,24s3.67,0,4.95-.07c4.27-.2,6.78-2.71,7-7C24,15.67,24,15.26,24,12s0-3.67-.07-4.95c-.2-4.27-2.71-6.78-7-7C15.67,0,15.26,0,12,0Zm0,5.84A6.16,6.16,0,1,0,18.16,12,6.16,6.16,0,0,0,12,5.84ZM12,16a4,4,0,1,1,4-4A4,4,0,0,1,12,16ZM18.41,4.15a1.44,1.44,0,1,0,1.44,1.44A1.44,1.44,0,0,0,18.41,4.15Z"/></svg>
              </a>
            </div>
          </div>

          <!-- Quick Links -->
          <div>
            <h4 class="text-lg font-semibold mb-4">Services</h4>
            <ul class="space-y-2 text-gray-400">
              <li><a href="/services#shutters" class="hover:text-white transition">Plantation Shutters</a></li>
              <li><a href="/services#blinds" class="hover:text-white transition">Custom Blinds</a></li>
              <li><a href="/services#shades" class="hover:text-white transition">Window Shades</a></li>
              <li><a href="/services" class="hover:text-white transition">All Services</a></li>
            </ul>
          </div>

          <!-- Contact -->
          <div>
            <h4 class="text-lg font-semibold mb-4">Contact</h4>
            <ul class="space-y-2 text-gray-400">
              <li class="flex items-center space-x-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg>
                <a href="tel:+18136414002" class="hover:text-white transition">(813) 641-4002</a>
              </li>
              <li class="flex items-center space-x-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
                <span>St. Petersburg, FL</span>
              </li>
              <li class="flex items-center space-x-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
                <a href="mailto:info@theshutterguystpete.com" class="hover:text-white transition">info@theshutterguystpete.com</a>
              </li>
            </ul>
          </div>
        </div>

        <!-- Bottom Bar -->
        <div class="border-t border-gray-800 mt-8 pt-8 flex flex-col md:flex-row justify-between items-center">
          <p class="text-gray-400 text-sm">¬© 2026 The Shutter Guy St. Pete. All rights reserved.</p>
          <div class="flex items-center space-x-2 mt-4 md:mt-0">
            <span class="bg-amber-500 text-black text-xs font-bold px-2 py-1 rounded">üéñÔ∏è HERO DISCOUNT</span>
            <span class="text-gray-400 text-sm">for Military & First Responders</span>
          </div>
        </div>
      </div>
    </footer>

    <script>
      const btn = document.getElementById('mobile-menu-btn');
      const menu = document.getElementById('mobile-menu');
      btn?.addEventListener('click', () => menu?.classList.toggle('hidden'));
    </script>
  </body>
</html>
