---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Custom Shutters, Blinds & Shades">
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-primary-900 via-primary-800 to-primary-900 text-white overflow-hidden">
    <div class="absolute inset-0 bg-[url('/images/shutter-1.jpg')] bg-cover bg-center opacity-20"></div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 md:py-32">
      <div class="max-w-3xl">
        <p class="text-primary-300 font-semibold mb-4 text-lg">St. Petersburg's Window Treatment Specialists</p>
        <h1 class="font-display text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
          Transform Your Home with Custom Shutters & Window Treatments
        </h1>
        <p class="text-xl text-gray-200 mb-8 leading-relaxed">
          35+ years of experience. Locally manufactured products. 25-year warranty. 
          We make your home beautiful while reducing energy costs.
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="/contact" class="bg-accent-500 hover:bg-accent-600 text-black font-bold px-8 py-4 rounded-lg text-lg transition shadow-lg inline-flex items-center justify-center">
            Get Free Consultation
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
          </a>
          <a href="/gallery" class="border-2 border-white/30 hover:border-white/60 text-white font-semibold px-8 py-4 rounded-lg text-lg transition inline-flex items-center justify-center">
            View Our Work
          </a>
        </div>
        <div class="mt-8 flex items-center space-x-2">
          <span class="bg-amber-500 text-black text-sm font-bold px-3 py-1 rounded">üéñÔ∏è HERO DISCOUNT</span>
          <span class="text-gray-300">Special pricing for Military & First Responders</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Badges -->
  <section class="bg-gray-50 py-8 border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-wrap justify-center items-center gap-8 md:gap-16 text-gray-600">
        <div class="flex items-center space-x-2">
          <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
          <span class="font-semibold">25-Year Warranty</span>
        </div>
        <div class="flex items-center space-x-2">
          <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
          <span class="font-semibold">Locally Manufactured</span>
        </div>
        <div class="flex items-center space-x-2">
          <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
